# Production environment configuration
NODE_ENV=production

# Limit Node.js memory usage on Replit
NODE_OPTIONS=--max-old-space-size=384

# Security settings - disabled for troubleshooting
ENABLE_GEOBLOCKING=false
ENABLE_RATE_LIMITING=false

# Database configuration - optimize for Replit
DB_MAX_CONNECTIONS=2
DB_IDLE_TIMEOUT=5000
DB_STATEMENT_TIMEOUT=10000
DB_RECONNECT_INTERVAL=10000

# Application URL
APP_URL=https://warehouse-management-system.replit.app